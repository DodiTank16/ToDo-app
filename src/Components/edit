const [data, setData] = useState(
    JSON.parse(localStorage.getItem("contacts"))
  );

const editTask = (id) => {
    const updatedData = data.map((contact) => {
      if (contact.id === id) {
        return {
          ...contact,
          name: state.name,
          email: state.email,
          phone: state.phone,
        };
      }
      return contact;
    });
    setData(updatedData);
    localStorage.setItem("contacts", JSON.stringify(updatedData));
  };
useEffect(() => {
    path === /add/${id} && setState(location.state);
  }, [location]);